<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>MyTabs | Username</title>
    <link rel="stylesheet" href="/static/CSS/main.css"/>
    <link rel="stylesheet" href="/static/CSS/desktop/desktop.css">
    <link rel="stylesheet" href="/static/CSS/all.min.css">
</head>
<body>
    <div class="topnav cols2">
        <div class="brand"><small><h3>MyTabs</small> | Username</h3></div>
        <div class="links">
            <h3 class="title">Desktop <button><i class="fa fa-moon"></i></button></h3>
        </div>
    </div>
    
    <section class="app">
        <div class="space"></div>
        <div class="tabs">
            <section id="desktop" class="full">
                <div class="tab desk tab_active">
                <div id="p_todos">
                    <h3 class="title">Todos</h3>
                    <ul id="todolist">
                        <!--delete and complete button-->
                        <li class="todo" onclick="view_todo()">Index page</li>
                        <li class="todo">Complete Nest</li>
                        <li class="todo">Add report module in OcV</li>
                        <li class="todo">Learn C and C++</li>
                    </ul>
                    <button class="floating"><i class="fa fa-plus"></i></button>
                    <form class="add_todo">
                        <input type="text" class="text" name="todo" placeholder="Add todo.."/>
                        <button class="send">Add</button>
                    </form>
                </div>
                <div class="min_tab">
                    <h3 class="title">Playing</h3>
                    <div class="song_details">
                        <video src="/media/home/antony/Music/Kenyan/Nyashinski - Balance.mkv" class="curr_playing" id="video_min"></video>
                        <audio class="curr_playing" id="curr_audio_min"></audio>
                    </div>
                    <div class="controls">
                        <button class="controll"><i class="fa fa-play"></i></button>
                        <button class="controll"><i class="fa fa-pause"></i></button>
                    </div>
                    <div class="playlist">
                        <h3 class="title">Playlist</h3>
                        <div id="curr_playlist">
                        </div>
                    </div>
                </div>
                </div>
            </section>

            <section class="full" id="music">
                <div class="tab music">
                    <div class="curr_song">
                        <div class="song_title">
                            <h3 class="title" id="curr_song_title">Song Title</h3>
                            <button class="controls" onclick="volumeDown()"><i class="fa fa-volume-down"></i></button>
                            <button class="controls" onclick="volumeUp()"><i class="fa fa-volume-up"></i></button>
                            <div class="main">
                                <button class="controls"><i class="fa fa-backward"></i></button>
                                <button class="controls" onclick="playSong()" id="play_audio"><i class="fa fa-play"></i></button>
                                <button class="controls hidden" onclick="pauseSong()" id="pause_audio"><i class="fa fa-pause"></i></button>
                                <button class="controls"><i class="fa fa-forward"></i></button>
                                <audio class="audio" id="curr_song" ontimeupdate="updateCurrentMediaTime()"></audio>
                            </div>
                            <button class="controls"><i class="fa fa-heart"></i></button>
                            <div class="timmer"></div>
                        </div>
                    </div>
                    <div>
                        <h3 class="title">Songs</h3>
                        <ul class="musiclist" id="musiclist">
                            
                        </ul>
                        <h3 class="title">Playlists</h3>
                        <ul class="musiclist">
                            <li><i class="fa fa-folder"></i>Energy</li>
                        </ul>
                    </div>
                </div>
            </section>
            
            <section class="full" id="videos">
                <div class="tab video_tab">
                    <div class="screen">
                        <video src="/media/home/antony/Music/Heart/Passenger_ Heart's On Fire.mkv" class="curr_video" id="curr_video"></video>
                        <div class="video_title">
                            <div class="controls">
                                <button class="control"><i class="fa fa-volume-down"></i></button>
                                <button class="control"><i class="fa fa-volume-up"></i></button>
                                <div class="main">
                                    <button class="control"><i class="fa fa-backward"></i></button>
                                    <button class="control" id="video_play" onclick="playVideo()" ><i class="fa fa-play"></i></button>
                                    <button class="control hidden" id="video_pause" onclick="pauseVideo()"><i class="fa fa-pause"></i></button>
                                    <button class="control"><i class="fa fa-forward"></i></button>
                                </div>
                                <button class="control"><i class="fa fa-heart"></i></button>
                            </div>
                        </div>
                    </div>
                    <div id="videolist">
                        <h3 class="title">Videos</h3>
                        <ul class="musiclist">
                            <li><i class="fa fa-video"></i>Video One</li>
                            <li><i class="fa fa-video"></i>Video One</li>
                            <li><i class="fa fa-video"></i>Video One</li>
                            <li><i class="fa fa-video"></i>Video One</li>
                        </ul>
                        <ul class="musiclist">
                            <li><i class="fa fa-folder"></i>Playlist one</li>
                        </ul>
                    </div>
                </div>
            </section>
        </div>
        <div class="space"></div>
    </section>

    <div class="bottomnav">
        <div class="page_select">
            <a href="#desktop"><button class="b_nav"><i class="fa fa-home"><small>Home</small></i></button></a>
            <a href="#music"><button class="b_nav"><i class="fa fa-music"><small>Music</small></i></button></a>
            <a href="#videos"><button class="b_nav"><i class="fa fa-video"><small>Videos</small></i></button></a>
        </div>
    </div>


